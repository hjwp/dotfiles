set -g set-remain-on-exit on
neww -n "tests etc"

# make 3 panes
split-window -v
split-window -h

# commands for each pane

send-keys -t 0 \
    "cd ." Enter \
    "git ls-files | entr pytest --tb=short --failed-first -v tests" Enter

send-keys -t 1 \
    "cd ." Enter \
    "git ls-files | entr mypy ." Enter

send-keys -t 2 \
    "cd ." Enter \
    "git ls-files | entr black --check ." Enter
